{
    "builders": [
        {
            "type": "vmware-iso",

            "guest_os_type": "{{ user `vmware_guest_os_type` }}",
            "tools_upload_flavor": "{{ user `vmware_tools_upload_flavor`}}",
            "vmx_data": {
                "cpuid.coresPerSocket": "1",
                "memsize": "{{ user `memory` }}",
                "numvcpus": "{{ user `cpus` }}"
            },

            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
                " debian-installer=en_US",
                " locale=en_US",
                " keymap=us",
                " net.ifnames=0",
                " netcfg/get_hostname=vagrant",
                " netcfg/get_domain=vm ",
                " mirror/http/hostname={{user `mirror_http_hostname`}}",
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "http_directory": "http",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "output_directory": "output-{{ user `atlas_box_name` }}-vmware-iso",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "10000s",
            "vm_name": "{{ user `atlas_box_name` }}"
        },
        {
            "type": "virtualbox-iso",

            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
                ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"]
            ],
            "virtualbox_version_file": ".vbox_version",

            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
                " debian-installer=en_US",
                " locale=en_US",
                " keymap=us",
                " net.ifnames=0",
                " netcfg/get_hostname=vagrant",
                " netcfg/get_domain=vm ",
                " mirror/http/hostname={{user `mirror_http_hostname`}}",
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "http_directory": "http",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "output_directory": "output-{{ user `atlas_box_name` }}-virtualbox-iso",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "10000s",
            "vm_name": "{{ user `atlas_box_name` }}"
        },
        {
            "type": "qemu",

            "accelerator": "kvm",
            "disk_cache": "none",
            "disk_interface": "virtio",
            "format": "qcow2",
            "net_device": "virtio-net",
            "qemuargs": [
                ["-m", "{{user `memory`}}"],
                ["-smp", "{{user `cpus`}}"]
            ],

            "boot_command": [
                "<esc><wait>",
                "install",
                " auto",
                " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed` }}",
                " debian-installer=en_US",
                " locale=en_US",
                " keymap=us",
                " net.ifnames=0",
                " netcfg/get_hostname=vagrant",
                " netcfg/get_domain=vm ",
                " mirror/http/hostname={{user `mirror_http_hostname`}}",
                "<enter>"
            ],
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "http_directory": "http",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_urls": [
                "{{ user `iso_path` }}/{{ user `iso_name` }}",
                "{{ user `iso_url` }}"
            ],
            "output_directory": "output-{{ user `atlas_box_name` }}-qemu-iso",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "10000s",
            "vm_name": "{{ user `atlas_box_name` }}"
        }
    ],
    "post-processors": [[
        {
            "keep_input_artifact": false,
            "output": "box/{{.Provider}}/{{ user `atlas_box_name` }}-{{ user `cm` }}{{ user `cm_version` }}-{{ user `version` }}.box",
            "type": "vagrant"
        },
        {
            "type": "vagrant-cloud",
            "only": ["virtualbox-iso"],
            "box_tag": "{{user `atlas_username`}}/{{user `atlas_box_name`}}",
            "access_token": "{{user `vagrantcloud_token`}}",
            "version": "{{user `version`}}"
        },
        {
            "type": "vagrant-cloud",

            "only": ["qemu"],
            "box_tag": "{{user `atlas_username`}}/{{user `atlas_box_name`}}",
            "access_token": "{{user `vagrantcloud_token`}}",
            "version": "{{user `version`}}"
        },
        {
            "type": "vagrant-cloud",

            "only": ["vmware-iso"],
            "box_tag": "{{user `atlas_username`}}/{{user `atlas_box_name`}}",
            "access_token": "{{user `vagrantcloud_token`}}",
            "version": "{{user `version`}}"
        }
    ]],
    "provisioners": [
        {
            "type": "shell",

            "scripts": [
                "script/remove-cdrom-sources.sh",
                "script/hardening.sh",
                "script/update.sh",
                "script/vagrant.sh",
                "script/vmware.sh",
                "script/virtualbox.sh",
                "script/parallels.sh",
                "script/cmtool.sh",
                "script/motd.sh",
                "script/minimize.sh",
                "script/cleanup.sh"
            ],

            "environment_vars": [
                "CM={{user `cm`}}",
                "CM_VERSION={{user `cm_version`}}",
                "ftp_proxy={{user `ftp_proxy`}}",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
                "no_proxy={{user `no_proxy`}}",
                "rsync_proxy={{user `rsync_proxy`}}",
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "HARDENING={{user `hardening`}}",
                "UPDATE={{user `update`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "expect_disconnect": "true"
        },
        {
            "type": "shell",

            "except": ["qemu"],
            "scripts": [
                "script/whiteout.sh"
            ],

            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
        }
    ],
    "variables": {
        "atlas_box_name": "",
        "atlas_username": "quarkslab",
        "cm": "nocm",
        "cm_version": "",
        "cpus": "1",
        "disk_size": "60000",
        "ftp_proxy": "{{env `ftp_proxy`}}",
        "headless": "false",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "install_vagrant_key": "true",
        "iso_checksum": "",
        "iso_checksum_type": "",
        "iso_name": "",
        "iso_path": "./",
        "iso_url": "",
        "memory": "512",
        "mirror_http_hostname": "ftp.fr.debian.org",
        "no_proxy": "{{env `no_proxy`}}",
        "parallels_guest_os_type": "debian",
        "preseed": "",
        "rsync_proxy": "{{env `rsync_proxy`}}",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "update": "false",
        "version": "{{isotime \"20060102\"}}",
        "virtualbox_guest_os_type": "Debian_64",
        "vmware_guest_os_type": "",
        "vmware_tools_upload_flavor": "linux"
    }
}
